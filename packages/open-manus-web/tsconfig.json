{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022"],
        "module": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "allowJs": false,
        "noEmit": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["lib/*"]
        }
    },

    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
